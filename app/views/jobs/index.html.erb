<% if current_user %>
<h1>Listing jobs</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Title</th>
      <th>Date-applied</th>
      <th>Follow-up-date</th>
      <th>Contact</th>
      <th>Contact-phone</th>
      <th>Notes</th>
      <th>Additional Contacts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.company_name %></td>
        <td><%= job.job_title %></td>
        <td><%= job.applied_date %></td>
        <td><%= job.follow_up_date %></td>
        <td><%= job.contact_name %></td>
        <td><%= job.contact_phone %></td>
        <td><%= job.notes %></td>
        <td><%= job.additional_contacts %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Job', new_job_path %> </br>
<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>

<% else %>
<h3>Sign in or sign-up to take advantage of this site's features!</h3>
<%= link_to 'Sign in', new_user_session_path %> </br></br>
<%= link_to 'Sign up', new_user_registration_path %>
 <% end %>
